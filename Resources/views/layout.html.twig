{% extends "::base.html.twig" %}
{% block head %}
    {{ parent() }}
    <meta name="author" content="Lugosium">
    <meta name="description" content="Lugosium Monitor, live remote OVH VPS monitoring.">
    <meta name="site" content="http://www.lugosium.com/">
    {% stylesheets filter='cssrewrite'
        '@bootstrap_css'
        'bundles/lugosiumovhvpsmonitor/css/styles.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset("bundles/lugosiumovhvpsmonitor/images/favicon.ico") }}" />
    <link rel="stylesheet" href="{{ asset("//cdnjs.cloudflare.com/ajax/libs/chosen/1.0/chosen.min.css") }}" />
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1">
                <header>
                    <nav class="navbar navbar-inverse navbar-default" role="navigation">
                        <div class="navbar-header">
                            <a title="Refresh page" href="{{ path('lugosium_ovhvpsmonitor_default_index') }}" class="navbar-brand navbar-left"><span class="glyphicon glyphicon-dashboard"></span></a>
                        </div>
                        <div class="navbar-right">
                            {% if form is defined %}
                                {{ form_start(form, {'attr': {'class': 'navbar-form'} } ) }}
                                    {{ form_row(form.vps, {'attr': {'class': 'form-control'} } ) }}
                                {{ form_end(form) }}
                            {% endif %}
                        </div>
                    </nav>
                </header>
            </div>
        </div>
        {% block content %}{% endblock %}
        <div class="row-fluid">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1">
                <footer>
                    <p class="text-right">
                    <small><a href="//www.lugosium.com/" target="_blank">Lugosium Web Development</a></small>
                    </p>
                </footer>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@jquery_js'
        '@bootstrap_js'
        '@highcharts_js'
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

